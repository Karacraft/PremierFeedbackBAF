<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/background">



    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <com.igsdigital.premierfeedback.custom.PremierTextViewBold
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="PLEASE RATE\n YOUR EXPERIENCE TODAY"
            android:textColor="@color/colorHeading"
            android:textAlignment="center"
            android:id="@+id/textView_selection_title"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_happy"
            android:src="@drawable/happyface"
            android:clickable="true"
            android:onClick="happyClicked"
            android:layout_marginLeft="10dp"
            android:paddingTop="80dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView_selection_title"
            android:layout_alignParentLeft="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_inDifferent"
            android:src="@drawable/indifferentface"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="inDifferentClicked"
            android:paddingTop="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView_selection_title"
            android:layout_toRightOf="@+id/imageView_happy"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_angry"
            android:src="@drawable/angryface"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="angryClicked"
            android:paddingTop="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textView_selection_title"
            android:layout_toRightOf="@+id/imageView_inDifferent" />
    </RelativeLayout>

</RelativeLayout>
