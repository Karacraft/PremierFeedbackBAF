<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/rate_your_experience">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_happy"
            android:src="@drawable/happyface"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="happyClicked"
            android:paddingTop="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_inDifferent"
            android:src="@drawable/indifferentface"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="inDifferentClicked"
            android:paddingTop="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_angry"
            android:src="@drawable/angryface"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="angryClicked"
            android:paddingTop="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

</RelativeLayout>
